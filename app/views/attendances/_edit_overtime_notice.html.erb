<% provide(:btn_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-12">
          <%= form_with(model: @user, url: update_overtime_notice_user_attendance_path(@user), local: true, method: :patch) do |f| %>
            <% @attendances.each do |id, attendances| %>
              <% user = User.find(id) %>
              <!--user.id→user.nameに変更-->
              <h1 class="modal-title"><%= "【#{user.name}からの残業申請】" %></h1>
              <table class="table table-bordered table-condensed table-hover" id="table-attendances">
                <thead>
                  <tr>
                    <th rowspan="2">日付</th>
                    <th rowspan="2">曜日</th>
                    <th colspan="2">終了予定時間</th>
                    <th colspan="2">指定勤務終了時間</th>
                    <th rowspan="2">時間外時間</th>
                    <th rowspan="2">業務処理内容</th>
                    <th rowspan="2">指示者確認㊞</th>
                    <th rowspan="2">変更</th>
                    <th rowspan="2">勤怠を確認する</th>
                  </tr>
                  <tr>
                    <th>時</th>
                    <th>分</th>
                    <th>時</th>
                    <th>分</th>
                  </tr>
                </thead>
                <tbody>
                  <% attendances.each do |day| %>              
                    <%= f.fields_for "attendances[]", day do |attendance| %>  
                      <tr>
                        <td><%= l(day.worked_on, format: :short) %></td>
                        <td class="<%= "wday#{day.worked_on.wday}" %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
                        <td><%= day.scheduled_end_time.try(:strftime,"%H") %></td>
                        <td><%= day.scheduled_end_time.try(:strftime,"%M") %></td>
                        <td><%= l(user.designated_work_end_time, format: :hour) %></td>
                        <td><%= l(user.designated_work_end_time, format: :min) %></td>
                        <td><%= working_overtimes(day.scheduled_end_time, user.designated_work_end_time, day.overtime_next_day) if day.scheduled_end_time.present? %></td>
                        <td><%= day.work_description %></td> 
                        <td><%= attendance.select :overtime_request_status, ['', 'なし', '申請中', '承認', '否認'] %></td>
                        <td><%= attendance.check_box :overtime_check %></td>
                        <td><%= link_to "確認", show_confirmation_user_path(id, date: day.worked_on.beginning_of_month), target: :_blank, rel: "noopener noreferrer", class: "btn btn-sm btn-primary" %></td>
                      </tr>
                    <% end %>
                  <% end %>
                </tbody>
              </table>
              <div class="center">
                <%= f.submit yield(:btn_text), class: "btn btn-primary btn-block" %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>