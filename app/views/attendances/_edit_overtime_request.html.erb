<% provide(:class_text, 'overtime-request') %>
<% provide(:btn_text, '変更を返信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
      <div class="modal-title">【残業申請】</div>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-12">
          <%= form_with(model: @attendance, url: update_overtime_request_user_attendance_path(@user, @attendance), local: true, method: :patch) do |f| %>
               <table class="table table-bordered table-condensed table-hover" id="table-attendances">
                <thead>
                  <tr>
                    <th>日付</th>
                    <th>曜日</th>
                    <th>終了予定時間</th>
                    <th>翌日</th>
                    <th>業務処理内容</th>
                    <th>指示者確認㊞</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td><%= l(@attendance.worked_on, format: :short) %></td>
                    <td><%= $days_of_the_week[@attendance.worked_on.wday] %></td>
                    <td><%= f.time_field :scheduled_end_time, class: 'form-control' %></td>
                    <td><%= f.check_box :overtime_next_day, id: "next_day" %></td>
                    <td><%= f.text_field :work_description, class: 'form-control' %></td>
                    <!--:name, :nameだと名前が出力される-->
                    <!--:id, :nameであればuserのidが表示される。-->
                    <td><%= f.collection_select( :overtime_request_superior, @superiors, :id, :name, {prompt: ""}) %></td>
                  </tr>
                </tbody>
              </table>
              <div class="center">
                <%= f.submit yield(:btn_text), class: "btn btn-primary btn-block" %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>