<% provide(:class_text, 'edit') %>
<% provide(:button_text, '更新') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
      <h1 class="modal-title">拠点情報編集</h1>
    </div>
    <div class="modal-body">
      <%= form_with(model: @base, url: basis_path(@base), local: true, method: :patch) do |f| %>
      
        <%= f.label :"拠点番号", class: "label-#{yield(:class_text)}" %>
        <%= f.number_field :base_number, class: "form-control", min: 1, max: 50 %>
        
        <%= f.label :"拠点名", class: "label-#{yield(:class_text)}" %>
        <%= f.text_field :base_name, class: "form-control" %>
        
        <%= f.label :"拠点種類", class: "label-#{yield(:class_text)}" %>
        <%= f.select :attendance_type, ["出勤", "退勤"], {include_blank: ""}, class: "form-control" %><br>

        <div class="center">
          <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
        </div>      
      <% end %>
    </div>
  </div>
</div>