<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table" id="table-attendances">
    <tr>
      <td><%= link_to "⇦", user_path(date: @first_day.prev_month), class: "btn btn-primary" %>
      <%= l(@first_day, format: :middle) %> 時間管理表  
      <%= link_to "⇨", user_path(date: @first_day.next_month), class: "btn btn-primary" %>
      </td>
      <!--指定勤務開始時間と指定勤務終了時間のコードを入力-->
      <td>
        指定勤務開始時間：<%= format_basic_info(@user.work_time) %><br>
        指定勤務終了時間：<%= format_basic_info(@user.work_time) %>
      </td>
      <td colspan="3">基本勤務時間：<%= format_basic_info(@user.basic_work_time) %></td>
      <td>初日：<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属：<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>氏名：<%= @user.name %></td>
      <td>コード</td>
      <!--コード-->
      <td></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>締め：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<!--一般ユーザーor上長ユーザーから送られた申請を確認するボタン-->
<!--#にfileとrootingを入力する-->
<div class="row">
  <%=link_to "【所属長承認申請のお知らせ】", '#' %><br>
  <%=link_to "【勤怠変更申請のお知らせ】", '#' %><br>
  <%=link_to "【残業申請のお知らせ】", '#' %><br>
</div>

<!--勤怠や編集や出力を行うボタン-->
<!--#にfileとrootingを入力する-->
<div class="btn-users-show">
  <br><%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
  <%= link_to "CSV出力", 'user_path(format: :csv)', class: "btn btn-primary" %><br>
  <%= link_to "勤怠修正ログ（承認済）", '#', class: "btn btn-primary" %>
</div>
<div>
  <table class="table table-bordered table-condensed table-striped table-hover" id="table-attendances">
    <thead>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <th rowspan="3">残業申請</th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th colspan="8">【実績】</th>
        <th colspan="5">所定外勤務</th>
      </tr>

      <tr>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外時間</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示者確認㊞</th>
      </tr>

      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>
  <tbody>
  <% @attendances.each do |day| %>
    <tr>
      <!--残業申請のモーダル-->
      <td></td>
      <td><%= l(day.worked_on, format: :short) %></td>
      <td class = '<%= "wday#{day.worked_on.wday}" %>'><%= $days_of_the_week[day.worked_on.wday] %></td>
      <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
      <td><%= l(day.started_at, format: :min) if day.started_at.present? %></td>
      
      <td><% if btn_text = attendance_state(day) %>
            <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
          <% end %></td>
      <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
      <td><%= l(day.finished_at, format: :min) if day.finished_at.present? %></td>
      <td></td>
      <td>
      <% if day.started_at.present? && day.finished_at.present? %>
        <%= str_times = working_times(day.started_at, day.finished_at) %>
        <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
      <% end %>
      </td>
      <td><%= day.note %></td>
      <!--終了予定時間-->
      <td></td>
      <td></td>
      <!--時間外時間-->
      <td></td>
      <!--業務処理内容-->
      <td></td>
      <!--支持者確認㊞-->
      <td></td>
    </tr>
  <% end %>
  </tbody>

<tfoot>
  <!--rowspan:縦結合、colspan：横結合-->
  <tr>
    <td></td>
      <td>累計日数</td>
      <td colspan="6">総合勤務時間</td>
      <td colspan="1">累計在社時間</td>
      <td rowspan="2"></td>
      <td rowspan="2"></td>
      <td rowspan="2"></td>
      <td rowspan="2"></td>
      <td rowspan="2"></td>
      <td rowspan="2"></td>
  </tr>
  <tr>
    <td></td>
    <td><%= @attendances.count %></td>
    <td colspan="6"><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td>
    <td colspan="1"><%= format("%.2f", @total_working_times.to_f) %></td>
  </tr>
</tfoot>   
</table>
</div>